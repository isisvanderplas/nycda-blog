extends layout/application.pug

block content

  section.container
    form(action="/posts" method="POST")
      .form-group
        label Post Title:
        input.form-control(type="text" name="title")
      .form-group
        label Post Slug:
        input.form-control(type="text" name="slug")
      .form-group
        label Post Content:
        textarea.form-control(rows="20" name="content")
      .form-group.text-xs-right
        button.btn.btn-large(type="submit") Submit






